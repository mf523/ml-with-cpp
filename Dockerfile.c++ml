FROM lmiao/dev-env:ubuntu-cpp

# https://docs.conda.io/en/latest/miniconda.html
RUN wget https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-aarch64.sh -O ~/miniconda.sh && \
    bash ~/miniconda.sh -b -p /opt/miniconda && \
    rm -f ~/miniconda.sh
    
    
# https://github.com/jupyter-xeus/xeus
RUN /opt/miniconda/bin/conda install -c conda-forge -q -y jupyterlab && \
    /opt/miniconda/bin/conda install -c conda-forge -q -y xeus && \
    /opt/miniconda/bin/conda install -c conda-forge -q -y xeus-cling

# USER docker
CMD /bin/bash
